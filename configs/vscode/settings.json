{
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  "ruff.path": ["${workspaceFolder}/.venv/bin/ruff"],
  "python.linting.enabled": false,
  "python.linting.pylintEnabled": false,
  "python.analysis.autoImportCompletions": true,
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.diagnosticSeverityOverrides": {
    "reportMissingTypeStubs": "none",
    "reportUnknownMemberType": "none",
    "reportUnknownArgumentType": "none",
    "reportUnknownVariableType": "none",
    "reportUnknownParameterType": "none",
    "reportCallIssue": "none",
    "reportOptionalCall": "none",
    "reportGeneralTypeIssues": "none",
    "reportAttributeAccessIssue": "none",
    "reportImportCycles": "none",
    "reportMissingImports": "none",
    "reportUnusedVariable": "warning",
    "reportUnusedParameter": "warning",
    "reportUnusedImport": "warning"
  },
  "[python]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.fixAll": "explicit"
    },
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "ruff.organizeImports": true,
  "ruff.fixAll": true,
  "ruff.enable": true,
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    ".pytest_cache": true,
    ".mypy_cache": true,
    ".ruff_cache": true,
    "*.egg-info": true
  },
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.cwd": "${workspaceFolder}",
  "python.testing.pytestArgs": [
    "tests"
  ],
  "python.terminal.activateEnvironment": true,
  "python.terminal.executeInFileDir": false,
  
  // Type checking with mypy
  "mypy-type-checker.args": ["--strict"],
  "mypy-type-checker.importStrategy": "fromEnvironment",
  "mypy-type-checker.path": ["${workspaceFolder}/.venv/bin/mypy"],
  
  // Markdown Preview Configuration
  "markdown.preview.fontSize": 12,
  "markdown.preview.lineHeight": 1.5,
  "markdown.preview.fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', 'Noto Sans', Helvetica, Arial, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji'",
  "markdown.preview.scrollPreviewWithEditor": true,
  "markdown.preview.scrollEditorWithPreview": true,
  "markdown.preview.markEditorSelection": true,
  "markdown.preview.doubleClickToSwitchToEditor": true,
  
  // Markdown Editor Configuration
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "on",
      "strings": "on",
      "other": "on"
    },
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file",
    "editor.codeActionsOnSave": {
      "source.fixAll.markdownlint": "explicit"
    },
    "editor.rulers": [80, 120],
    "editor.tabSize": 2,
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  },
  
  // Markdownlint Configuration
  "markdownlint.config": {
    "default": true,
    "MD003": { "style": "atx" },
    "MD004": { "style": "dash" },
    "MD007": { "indent": 2 },
    "MD013": false,
    "MD024": { "allow_different_nesting": true },
    "MD026": { "punctuation": ".,;:!" },
    "MD029": { "style": "ordered" },
    "MD033": false,
    "MD035": { "style": "---" },
    "MD046": { "style": "fenced" },
    "MD048": { "style": "backtick" },
    "MD049": { "style": "underscore" },
    "MD050": { "style": "asterisk" }
  },
  "markdownlint.run": "onType",
  "markdownlint.focusMode": true,
  
  // Markdown Extensions
  "markdown.extension.toc.levels": "2..6",
  "markdown.extension.toc.plaintext": false,
  "markdown.extension.toc.updateOnSave": true,
  "markdown.extension.preview.autoShowPreviewToSide": false,
  "markdown.extension.print.theme": "light",
  "markdown.extension.tableFormatter.enabled": true,
  
  // Markdown Styling
  "markdown.styles": [
    "${workspaceFolder}/.vscode/markdown-preview.css"
  ],
  
  // Mermaid Diagram Support
  "markdown.mermaid.theme": "default",
  
  // Additional Markdown Features
  "markdown.validate.enabled": true,
  "markdown.validate.unusedLinkDefinitions.enabled": "warning",
  "markdown.validate.duplicateLinkDefinitions.enabled": "warning",
  "markdown.validate.fragmentLinks.enabled": "warning",
  "markdown.occurrencesHighlight.enabled": true,
  "markdown.suggest.paths.enabled": true,
  "markdown.links.openLocation": "currentGroup"
}